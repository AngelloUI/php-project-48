#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)

Options:
  -h --help     Show this screen
  --version     Show version.

DOC;

$args = Docopt::handle($doc, array('version'=>'gendiff v0'));
foreach ($args as $k=>$v)
    echo $k.': '.json_encode($v).PHP_EOL;